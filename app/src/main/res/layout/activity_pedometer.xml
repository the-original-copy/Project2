<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Pedometer">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_predict_diabetes"
        android:layout_width="match_parent"
        android:background="@color/teal_700"
        android:layout_marginBottom="15dp"
        android:layout_height="?attr/actionBarSize">

        <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="Pedometer"
        android:textColor="@color/white"
        android:textSize="@dimen/toolbar_title_text_size"
        android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/circularProgressBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        app:cpb_background_progressbar_color="#b6bbd8"
        app:cpb_background_progressbar_width="20dp"
        app:cpb_progress_direction="to_right"
        app:cpb_progress_max="25"
        app:cpb_progressbar_color="@color/teal_700"
        app:cpb_progressbar_width="15dp"
        app:cpb_round_border="true" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_goal_achieved"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="@dimen/authentication_screen_marginStartEnd"
        android:layout_marginTop="@dimen/authentication_screen_marginTop"
        android:layout_marginEnd="@dimen/authentication_screen_marginStartEnd"
        android:elevation="@dimen/card_view_elevation"
        android:gravity="center"
        android:visibility="invisible"
        app:cardCornerRadius="@dimen/card_view_corner_radius">

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Goal achieved!"
            android:textColor="@color/green"
            android:textSize="@dimen/authentication_description_text_size" />
        <TextView
            android:id="@+id/continuePedometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/result"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Continue"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/authentication_description_text_size" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_stepGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/circularProgressBar"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:layout_marginBottom="10dp"
        android:text="Step goal: 3"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_stepsTaken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tv_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_stepsTaken"
        android:layout_centerInParent="true"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_metrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/circularProgressBar"
        android:layout_marginStart="@dimen/card_view_marginStartEnd"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:layout_marginEnd="@dimen/card_view_marginStartEnd"
        android:background="@android:color/white"
        app:cardCornerRadius="@dimen/card_view_corner_radius"
        app:cardElevation="@dimen/card_view_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_marginStart="@dimen/sunset_marginStart"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/identification_image_size"
                android:layout_height="@dimen/identification_image_size"
                android:layout_marginEnd="@dimen/identification_image_marginEnd"
                app:srcCompat="@drawable/distance" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/value_text_size"
                android:text="0" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_marginEnd="@dimen/sunrise_marginTop"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_sunrise"
                    android:layout_width="@dimen/identification_image_size"
                    android:layout_height="@dimen/identification_image_size"
                    android:layout_marginEnd="@dimen/identification_image_marginEnd"
                    app:srcCompat="@drawable/steps" />

                <TextView
                    android:id="@+id/steps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="@dimen/value_text_size"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_marginStart="@dimen/sunset_marginStart"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_sunset"
                    android:layout_width="@dimen/identification_image_size"
                    android:layout_height="@dimen/identification_image_size"
                    android:layout_marginEnd="@dimen/identification_image_marginEnd"
                    app:srcCompat="@drawable/burncalories" />

                <TextView
                    android:id="@+id/tv_calories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/value_text_size"
                    android:text="0" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_pedometer_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_metrics"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/btn_marginStartEnd"
        android:layout_marginTop="@dimen/sign_up_screen_btn_marginTop"
        android:layout_marginEnd="@dimen/btn_marginStartEnd"
        android:background="@drawable/shape_button_rounded"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingTop="@dimen/btn_paddingTopBottom"
        android:paddingBottom="@dimen/btn_paddingTopBottom"
        android:text="Pedometer Settings"
        android:textColor="@android:color/white"
        android:textSize="@dimen/btn_text_size" />

</RelativeLayout>